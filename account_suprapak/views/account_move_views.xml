<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <!-- account.move inherit form view -->
        <record id="account_invoice_form" model="ir.ui.view">
            <field name="name">account.move.inherit.view.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='utm_link']" position="after">
                    <group string="Transport">
                        <field name="dispatch_route" widget="selection"  attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="carrier_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="carrier_tracking_ref" attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="net_weight" attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="gross_weight" attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="total_boxes" attrs="{'readonly': [('state','!=','draft')]}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- account.move inherit form view -->
        <record id="view_invoice_form" model="ir.ui.view">
            <field name="name">account.move.inherit.view.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_co_e_invoicing_comfiar.view_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='ref_comfiar']" position="attributes">
                    <attribute name="string">Purchase Order</attribute>
                </xpath>
                <xpath expr="//notebook/page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='ref_comfiar']" position="before">
                    <field name="order"/>
                </xpath>
                <xpath expr="//notebook/page[@id='aml_tab']/field[@name='line_ids']/tree/field[@name='ref_comfiar']" position="before">
                    <field name="order" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- account.move inherit form view -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.inherit.view.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='narration']" position="before">
                    <field name="observation" placeholder="Add an observation..." nolabel="1" height="50"  attrs="{'readonly': [('state','!=','draft')]}"/>
                    <field name="observation_pa" placeholder="Add a second observation..." nolabel="1" height="50"  attrs="{'readonly': [('state','!=','draft')]}"/>
                </xpath>
                <!-- <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="pa_id" attrs="{'readonly': [('state','!=','draft')], 'invisible': [('type','not in', ('out_invoice','out_refund'))]}"/>
                </xpath> -->
                <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
                    <separator string="Other expenses"/>
                    <field name="insurances" widget="monetary" attrs="{'readonly': [('state','!=','draft')], 'invisible': [('type','not in', ('out_invoice','out_refund'))]}"/>
                    <field name="freight" widget="monetary" attrs="{'readonly': [('state','!=','draft')], 'invisible': [('type','not in', ('out_invoice','out_refund'))]}"/>
                    <field name="other_expenses" widget="monetary" attrs="{'readonly': [('state','!=','draft')], 'invisible': [('type','not in', ('out_invoice','out_refund'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>