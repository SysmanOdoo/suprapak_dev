<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_inherit_stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,partially_available,assigned,done,wait"/>
                </xpath>
                <xpath expr="//button[@name='button_validate']" position="replace">
                    <button name="validation_invoice_due" attrs="{'invisible': ['|', ('state', 'in', ('waiting','confirmed')), ('show_validate', '=', False)]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                </xpath>
                <xpath expr="//button[@name='action_assign']" position="after">
                    <button name="button_validate" attrs="{'invisible':[('state', '!=','wait')]}" string="Validate" type="object" class="oe_highlight" groups="dev_customer_credit_limit.user_portfolio"/>
                </xpath>
            </field>
        </record>
        <record model="ir.module.category" id="module_category_user_portfolio">
            <field name="name">Portfolio</field>
            <field name="description">Helps you manage your data sheet.</field>
        </record>
        <record id="user_portfolio" model="res.groups">
            <field name="name">Portfolio</field>
            <field name="category_id" ref="module_category_user_portfolio"/>
        </record>
</odoo>
